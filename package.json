{
  "name": "space",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "turboflux/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "turboflux": "pnpm --filter @turboflux/client",
    "intell-client": "pnpm --filter @intellisync/client",
    "intell-server": "pnpm --filter @intellisync/server",
    "workshop": "pnpm --filter workshop",
    "ui": "pnpm --filter tailwind-ui"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "dotenv-cli": "latest",
    "prettier": "^2.8.8"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.14.2"
}
