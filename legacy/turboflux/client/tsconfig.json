{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/modules/*": [
        "modules/*"
      ]
    },
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}
